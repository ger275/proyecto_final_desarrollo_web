@model ProyectoFinalDesarrolloWeb.Models.ProductoClienteModel

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Producto por Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="idPaciente" class="control-label"></label>
                @* <input asp-for="idPaciente" class="form-control" /> *@
                <select asp-for="idPaciente" class="form-select" asp-items="@(new SelectList(ViewBag.Pacientes, "Value", "Text", ""))"></select>
                <span asp-validation-for="idPaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idProducto" class="control-label"></label>
                @* <input asp-for="idProducto" class="form-control" /> *@
                <select asp-for="idProducto" class="form-select" asp-items="@(new SelectList(ViewBag.Productos, "Value", "Text", ""))"></select>
                <span asp-validation-for="idProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cantidad" class="control-label"></label>
                <input asp-for="cantidad" class="form-control" />
                <span asp-validation-for="cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha" class="control-label"></label>
                <input asp-for="fecha" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group row g-2">
                <div class="col-auto">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
